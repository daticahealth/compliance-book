.grid-layout
    @supports (display: grid)
        // base settings, small viewport
        $size = 100px
        display: grid
        grid-template-columns: repeat(auto-fill, minmax($size, 1fr))
        grid-gap: calc(0.5rem + 2vw)
        grid-auto-rows: minmax($size, auto)
        grid-auto-flow: dense
        // padding: 10px

.item-span-2
    grid-column-end: span 2
    grid-row-end: span 2

.item-span-3
    grid-column-end: span 3
    grid-row-end: span 3

.item-span-4
    grid-column-end: span 4
    grid-row-end: span 4

// flexbox utils
.flex
    display: flex
    flex-direction: column
    flex-wrap: nowrap
    justify-content: center
    align-content: center
    align-items: center

.md-flex-row
    @media screen and (min-width: $screen-sm)
        flex-direction: row

.flex-item
    flex: 0 1 auto
    align-self: auto
